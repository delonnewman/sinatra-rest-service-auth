#!/usr/bin/env ruby
require 'yaml'

unless ARGV.first
	puts "Usage: #$0 FILE"
	exit
end

file   = ARGV.first
keys   = $stdin.read.split("\n")
config = nil

if File.exists? file
	config = YAML.load_file file

	if config['keys']
		config['keys'].push(keys).flatten!
	else
		config['keys'] = keys
	end
else
	config = { 'keys' => keys }
end

File.open(file, 'w') do |f|
	f.write config.to_yaml
end
